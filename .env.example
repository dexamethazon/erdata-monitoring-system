# Docker Configuration
DOCKERFILE=Dockerfile.minimal

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/webhook

# Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console
N8N_METRICS=false

# Timezone
GENERIC_TIMEZONE=UTC

# Database Configuration (optional - for PostgreSQL)
DB_TYPE=postgresdb
DB_HOST=postgres
DB_PORT=5432
DB_NAME=n8n
DB_USER=n8n
DB_PASSWORD=changeme

# Redis Configuration (optional - for caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
N8N_ENCRYPTION_KEY=your-encryption-key-here
N8N_USER_MANAGEMENT_JWT_SECRET=your-jwt-secret-here

# External Services
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SENDER=

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_WEBHOOK_URL=

# AWS Credentials (for monitoring AWS resources)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Azure Credentials (for monitoring Azure resources)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_SUBSCRIPTION_ID=

# Google Cloud Credentials (for monitoring GCP resources)
GOOGLE_APPLICATION_CREDENTIALS=/app/data/gcp-credentials.json

# Monitoring Configuration
MONITORING_INTERVAL=300
ALERT_COOLDOWN=900
MAX_RETRIES=3
TIMEOUT_SECONDS=30